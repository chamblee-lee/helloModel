<mvc:View
	controllerName="helloModel.controller.Workspace"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<l:ResponsiveSplitter defaultPane="default">
		<l:PaneContainer>
			<l:SplitPane requiredParentWidth="200" id="default">
				<l:layoutData>
					<l:SplitterLayoutData size="65%" />
				</l:layoutData>
				<mvc:XMLView viewName="helloModel.view.Designer"/>
			</l:SplitPane>
            <l:SplitPane requiredParentWidth="200">
				<l:layoutData>
					<l:SplitterLayoutData size="35%" />
				</l:layoutData>
				<mvc:XMLView viewName="helloModel.view.Attributes"/>
			</l:SplitPane>
		</l:PaneContainer>
	</l:ResponsiveSplitter>
</mvc:View>